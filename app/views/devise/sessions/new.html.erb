<h1 class="title is-1 has-text-centered">Railsbrary</h1>
<h2 class="subtitle is-3 has-text-centered">Welcome back</h1>
<div class="columns is-centered is-fullheight is-vcentered">
  <div class="column is-two-fifths card">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render 'shared/flash_messages' %>

      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <div class="control">
          <%= f.password_field :password, autocomplete: "off", class: "input" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.label :remember_me, class: "checkbox" do %>
            <%= f.check_box :remember_me %>
            Remember me
          <% end %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button is-primary is-fullwidth" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
